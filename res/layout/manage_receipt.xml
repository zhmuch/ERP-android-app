<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:gravity="center">
    <TextView
        android:id="@+id/tv_manage_receipt_bar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bar_bg"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="@string/sc" />
    
    <GridView
        android:id="@+id/gv_receipt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="20dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:layout_below="@+id/tv_manage_receipt_bar"
        android:numColumns="auto_fit" >	
    </GridView>

    <Button
        android:id="@+id/btn_back"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/tv_manage_receipt_bar"
        android:layout_alignBottom="@+id/tv_manage_receipt_bar"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:background="@drawable/btn_back_selector"
        android:textColor="#ffffff"
        android:text="@string/back" />

</RelativeLayout>
